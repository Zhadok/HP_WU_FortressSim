{
    "author": "Zhadok",
    "nameClass": "auror",
    "rules": [
        {
            "event": {
                "type": "enterCombatWithHighestPriorityAvailableEnemy"
            },
            "priority": 0,
            "conditions": {
                "all": [
                    {
                        "fact": "wizard",
                        "path": ".inCombat",
                        "operator": "equal",
                        "value": false
                    },
                    {
                        "fact": "highestPriorityAvailableEnemy",
                        "path": ".inCombat",
                        "operator": "equal",
                        "value": false
                    }
                ]
            }
        },
        {
            "event": {
                "type": "exitCombat",
                "params": {
                    "description": "Professor should exit and check for better enemies available (disabled for now)"
                }
            },
            "priority": 0,
            "conditions": {
                "all": [
                    {
                        "fact": "wizard",
                        "path": ".inCombat",
                        "operator": "equal",
                        "value": true
                    },
                    {
                        "fact": "wizard",
                        "path": ".inCombatWith.inCombat",
                        "operator": "equal",
                        "value": true
                    },
                    {
                        "fact": "wizard",
                        "path": ".inCombat",
                        "operator": "equal",
                        "value": null
                    }
                ]
            }
        },
        {
            "event": {
                "type": "combatSpellCastWizard"
            },
            "priority": 0,
            "conditions": {
                "all": [
                    {
                        "fact": "wizard",
                        "path": ".inCombat",
                        "operator": "equal",
                        "value": true
                    },
                    {
                        "fact": "wizard",
                        "path": ".inCombatWith",
                        "operator": "notEqual",
                        "value": null
                    }
                ]
            }
        }
    ]
}
{
    "author": "Zhadok",
    "nameClass": "magizoologist",
    "rules": [
        {
            "event": {
                "type": "enterCombatWithHighestPriorityAvailableEnemy"
            },
            "priority": 2,
            "conditions": {
                "all": [
                    {
                        "fact": "wizard",
                        "path": ".inCombat",
                        "operator": "equal",
                        "value": false
                    },
                    {
                        "fact": "highestPriorityAvailableEnemy",
                        "path": ".inCombat",
                        "operator": "equal",
                        "value": false
                    }
                ]
            }
        },
        {
            "event": {
                "type": "combatSpellCastWizard"
            },
            "priority": 1,
            "conditions": {
                "all": [
                    {
                        "fact": "wizard",
                        "path": ".inCombat",
                        "operator": "equal",
                        "value": true
                    },
                    {
                        "fact": "wizard",
                        "path": ".inCombatWith",
                        "operator": "notEqual",
                        "value": null
                    }
                ]
            }
        },
        {
            "event": {
                "type": "noAction"
            },
            "priority": 0,
            "conditions": {
                "all": []
            }
        }
    ]
}